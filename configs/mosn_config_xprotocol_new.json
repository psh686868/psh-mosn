{
  "servers": [
    {
      "default_log_path": "/tmp/mosn/default.log",
      "default_log_level": "DEBUG",
      "graceful_timeout": "10s",
      "Processor": 1,
      "listeners": [
        {
          "name": "egress_http",
          "address": "0.0.0.0:12221",
          "bind_port": true,
          "filter_chains": [
            {
             "match":"",
             "tls_context":{},
              "filters": [
                {
                  "type": "proxy",
                  "config": {
                    "DownstreamProtocol": "Xprotocol",
                    "Name": "proxy_config",
                    "SupportDynamicRoute": true,
                    "UpstreamProtocol": "Http2",
                    "VirtualHosts": [
                      {
                        "Domains": [
                          "*"
                        ],
                        "Name": "xprotocol",
                        "RequireTls": "no",
                        "Routers": [
                          {
                            "Match": {
                              "Headers": [
                                {
                                  "Name": "Host",
                                  "Value": "172.17.0.4:2000"
                                }
                              ],
                              "Path": "/"
                            },
                            "Route": {
                              "ClusterName": "xprotocol-name"
                            }
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ],
          "stream_filters": [
            {
              "type": "healthcheck",
              "config": {
                "cache_time": "360s",
                "cluster_min_healthy_percentages": {
                  "local_service": 70
                },
                "passthrough": false
              }
            }
          ],
          "log_path": "/tmp/mosn/ingress.log",
          "log_level": "DEBUG",
          "access_logs": [
            {
              "log_path": "./access_egress.log",
              "log_format": "%StartTime% %RequestReceivedDuration% %ResponseReceivedDuration% %REQ.requestid% %REQ.cmdcode% %RESP.requestid% %RESP.service%"
            }
          ]
        }
      ]
    }
  ],
  "cluster_manager": {
    "auto_discovery": true,
    "clusters": [
      {
        "Name": "xprotocol-name",
        "Type": "SIMPLE",
        "sub_type": "",
        "lb_type": "LB_ROUNDROBIN",
        "MaxRequestPerConn": 0,
        "ConnBufferLimitBytes": 0,
        "spec": {},
        "hosts": [
          {
            "Address": "172.17.0.4:2000",
            "Hostname": "echo_server_sidecar",
            "Weight": 1
          }
        ],
        "LBSubsetConfig": {
          "FallBackPolicy": 0,
          "DefaultSubset": null,
          "SubsetSelectors": null
        }
      }
    ]
  }
}
